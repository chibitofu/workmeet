<div class="row newFav">
  <div class="col-xs-1">
  </div>
  <% if (currentUser) { %>
  <form class="navbar-form navbar-left" role="search" method="POST" action="/favorites">
  <div class="col-xs-4" >
    <img src="<%= data.icon %>">
    <input type="hidden" value="<%= data.place_id %>" name="placeid">
    <input type="hidden" value="<%= data.icon %>" name="icon">
    <input type="hidden" value="<%= data.geometry.location.lat %>" name="lat">
    <input type="hidden" value="<%= data.geometry.location.lng %>" name="lng">
    <input type="hidden" value="<%= img %>" name="img">
    <input type="hidden" value="<%= data.types %>" name="types">
    <p>name:<%= data.name %></p><input class="form-control" type="hidden" value="<%= data.name %>" name="name">
    <p>rating: <%= data.rating %></p><input class="form-control" type="hidden" value="<%= data.rating %>" name="rating">
    <p>google url: <%= data.url %></p><input class="form-control" type="hidden" value="<%= data.url %>" name="url" >
    <p>website: <%= data.website %></p><input class="form-control" type="hidden" value="<%= data.website %>" name="website">
    <p>Address: <%= data.formatted_address %></p><input class="form-control" type="hidden" value="<%= data.formatted_address %>" name="address">
    <p>Phone: <%= data.formatted_phone_number %></p><input class="form-control" type="hidden" value="<%= data.formatted_phone_number %>" name="phone">
    <p>
    <% data.types.forEach(function(types) { %>
        <span><%= types %>, </span>
    <% }); %>
  </p>
  </div>
    <div class="col-xs-4">
      <div>
        Food
        <div id="foodTag">
          <% if (food.food) { %>
            <% food.food.forEach(function(foods) { %>
                <div class="tags">
                  <%= foods.food %>
                </div>
              <% }) %>
          <% } %>
        </div>
        <div id="food">
        </div>
        <input id="newFood" type="text" class="form-control">
        <button id="foodButt" type="button" class="btn btn-default">Add Food</button>
      </div>
      <div>
        Drink
        <div id="drinkTag">
          <% if (drink.drinks) { %>
            <% drink.drinks.forEach(function(drinks) { %>
                <div class="tags">
                  <%= drinks.drink%>
                </div>
              <% }) %>
          <% } %>
        </div>
        <div id="drink">
        </div>
        <input id="newDrink" type="text" class="form-control">
        <button id="drinkButt" type="button" class="btn btn-default">Add Drink</button>
      </div>
      <div>
        Wifi<br>
        <input type="radio" value="0" name="wifi" checked> none
        <input type="radio" value="2" name="wifi"> bad
        <input type="radio" value="5" name="wifi"> average
        <input type="radio" value="10" name="wifi"> good
      </div>
      <div>
        Noise<br>
        <input type="radio" value="1" name="noise"> quiet
        <input type="radio" value="5" name="noise" checked> average
        <input type="radio" value="10" name="noise"> loud
      </div>
      <div>
        Seating<br>
        <input type="radio" value="0" name="seating" checked> none
        <input type="radio" value="2" name="seating"> little
        <input type="radio" value="5" name="seating"> average
        <input type="radio" value="10" name="seating"> lots
      </div>
      <div>
        Outlets<br>
        <input type="radio"  value="0" name="outlets" checked> none
        <input type="radio"  value="2" name="outlets"> bad
        <input type="radio"  value="5" name="outlets" > average
        <input type="radio"  value="10" name="outlets"> good
      </div>
      <div>
        Tags
        <div id="tagTag">
          <% if ( tag.tag ) { %>
            <% tag.tag.forEach(function(tags) { %>
                <div class="tags">
                  <%= tags.tag %>
                </div>
              <% }) %>
          <% } %>
        </div>
        <div id="tag">
        </div>
        <input id="newTag" type="text" class="form-control">
        <button id="tagButt" type="button" class="btn btn-default">Add Tag</button>
      </div>
  </div>
  <div class="col-xs-3">
    <div>
      <p>Business Hours</p>
      <% if(currentUser) { %>
        <% if (data.opening_hours) { %>
        <input type="hidden" value="<%= data.opening_hours.weekday_text %>" name="hours">
        <ul>

          <% data.opening_hours.weekday_text.forEach(function(hours) { %>
            <li style="list-style-type:none"><%= hours %></li>
          <% }); %>

        </ul>
      <% }; %>
      <% }; %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
      <div>
        <% if (img.length > 0) { %>
      <% img.forEach(function(photos) { %>
          <img src="<%= photos %>">
      <% }); }%>
      </div>
      <p><button type="submit" class="btn btn-warning subButt">Create Favorite</button></p>
    </form>
    <% } else { %>
      <div class="jumbotron text-center">
        <h1>Please log in to add favorites</h1>
      </div>
    <% }; %>
  </div>
</div>
